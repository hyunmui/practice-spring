<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence persistence_2_1.xsd">
  <persistence-unit name="OrderJPA">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <mapping-file>META-INF/customer.orm.xml</mapping-file>
    <class>com.flexibledev.java.entity.CustomerEntity</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
    </properties>
  </persistence-unit>
</persistence>