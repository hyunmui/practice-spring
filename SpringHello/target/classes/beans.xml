<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="hello" class="springHello.Hello" />
	<bean id="customerService"
		class="springHello.customer.CustomerServiceImpl" scope="prototype"
		init-method="init" destroy-method="cleanUp"
		p:customerRepository-ref="customerRepository">
	</bean>
	<bean id="customerRepository"
		class="springHello.customer.CustomerRepositoryImpl">
		<property name="properties">
		  <props>
		      <prop key="driverClassName">com.mysql.jdbc.Driver</prop>
		      <prop key="url">jdbc:mysql://localhost:3306/order_system</prop>
		      <prop key="username">root</prop>
		      <prop key="password">1234</prop>
		  </props>
		</property>
	</bean>

</beans>
